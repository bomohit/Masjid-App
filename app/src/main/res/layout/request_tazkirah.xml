<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/english_green">

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/aclonica"
        android:text="TAZKIRAH"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/textView66"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_tazkirah" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="PERMOHONAN PENGGANTI PENCERAMAH"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tajuk / Title"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/inputTazkirahTitle"
        app:layout_constraintStart_toStartOf="@+id/inputTazkirahTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/inputTazkirahTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama / Name"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/inputTazkirahName"
        app:layout_constraintStart_toStartOf="@+id/inputTazkirahName"
        app:layout_constraintTop_toBottomOf="@+id/inputTazkirahTitle" />

    <EditText
        android:id="@+id/inputTazkirahName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tarikh / Date"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/inputTazkirahDate"
        app:layout_constraintStart_toStartOf="@+id/inputTazkirahDate"
        app:layout_constraintTop_toBottomOf="@+id/inputTazkirahName" />

    <TextView
        android:id="@+id/inputTazkirahDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        app:layout_constraintEnd_toEndOf="@+id/inputTazkirahName"
        app:layout_constraintStart_toStartOf="@+id/inputTazkirahName"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Waktu / Time"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/spinnerTazkirahTime"
        app:layout_constraintStart_toStartOf="@+id/spinnerTazkirahTime"
        app:layout_constraintTop_toBottomOf="@+id/inputTazkirahDate" />

    <Spinner
        android:id="@+id/spinnerTazkirahTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        app:layout_constraintEnd_toEndOf="@+id/inputTazkirahName"
        app:layout_constraintStart_toStartOf="@+id/inputTazkirahName"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_green"
        android:text="Seterusnya / Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonCancel"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTazkirahTime" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="127dp"
        android:layout_height="52dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_green"
        android:text="Kembali / Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonConfirm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTazkirahTime" />
</androidx.constraintlayout.widget.ConstraintLayout>